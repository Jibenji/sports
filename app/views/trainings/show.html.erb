
<div class="training-banner">
  <div class="training-banner" style="background-image: url('<%= cl_image_path @training.profile.trainer.banner_picture %>')">
  </div>
</div>

<div class="wrapper-training">

<%= render 'trainings/training-show' %>

<div class="training-booking">
  <div class="sessions">
    <h4>Training's sessions: </h4>
  <% previous = @sessions.first %>
  <% @sessions.each do |session| %>

  <% if session.date.strftime("%Y-%m-%d") != previous.date.strftime("%Y-%m-%d") or @sessions.first == session %>
    <h4>
      <%= session.date.strftime("%a, %e %b %Y") %>
    </h4>
    <br>
    <h4>Select a time:</h4>
    <br>
  <% end %>

<%= link_to "#{session.time.strftime("at %H:%M")}", "#", data: { toggle: "modal", target: "#myConfirmModal#{session.id}" },class: "blue-button" %>

    <% previous = session %>
 <%= render partial: 'shared/confirm', locals: { session: session } %>
  <% end %>

  </div>
</div>
</div>

<style>
  .footer{
    display: none;
  }
</style>



