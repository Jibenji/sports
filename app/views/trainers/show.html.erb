<div class="hidden-xs">
<div class="profile-container">
  <div class="row">
    <div class="col-sm-8">
      <div class="profile-text">
        <div id="trainer-name" class="text-center">
          <h1><%= @profile.first_name + " " + @profile.last_name %></h1>
        </div>
        <h4 id="trainer-tagline"><%= @trainer.description %></h4>
        <p id="trainer-desription"><%= @trainer.bio %></p>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="profile-photo" style="background-image: url(<%= image_url cl_image_path @trainer.banner_picture%>);">
      </div>
    </div>
  </div>
</div>
</div>

<div class="hidden-sm hidden-md hidden-lg">
<div class="profile-container-xs">
  <div class="row">
    <div class="col-xs-12">
      <div class="profile-photo-xs" style="background-image: url(<%= image_url cl_image_path @trainer.banner_picture%>);">
      </div>
    </div>
    <div class="col-xs-12">
      <div class="profile-text-xs">
        <div id="trainer-name" class="text-center">
          <h1><%= @profile.first_name + " " + @profile.last_name %></h1>
        </div>
        <h4 id="trainer-tagline"><%= @trainer.description %></h4>
        <p id="trainer-desription"><%= @trainer.bio %></p>
      </div>
    </div>
  </div>
</div>
</div>

<div id="list-trainings-on-profile">
  <div id="trainings-title">
    <h2>All <%= @profile.first_name %>'s trainings:</h2>
  </div>
</div>
