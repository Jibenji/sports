<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.5) 0%, rgba(0,36,61,0.5) 50%), url(<%= image_url 'background.jpg'%>);">
  <div class="banner-content">

    <h1>
      Soplex
    </h1>
    <h3>
      Train Whenever, Wherever
    </h3>

    <div class="search-field-banner">
      <%= simple_form_for :search_query, url: results_path do |f| %>
      <div class="form-inputs">
        <%= f.input :sport, autofocus: true, collection: @sports %>
        <%= f.input :date, as: :date_picker %>
      </div>
      <div class="form-actions button-padding">
        <%= f.button :submit, "Search", class: "black-button" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
