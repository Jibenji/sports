<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.5) 0%, rgba(0,36,61,0.5) 50%), url(<%= image_url 'background.jpg'%>);">
  <div class="banner-content">

    <h1>
      Soplex
    </h1>
    <h3>
      Train Whenever, Wherever
    </h3>

    <div class="container">
      <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <div class="form-inline search-field-banner ">
            <%= simple_form_for :search_query, url: results_path do |f| %>
            <div class="form-inputs">
              <%= f.input :sport, autofocus: true, collection: @sports, prompt: "Pick a sport", label: false %>
              <%= f.input :date, as: :date_picker, placeholder: "Pick a date", label: false %>
              <%= f.button :submit, "Search", class: "black-button form-inline" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

