<div class="form-container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= simple_form_for(@sport) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :tagline %>
        <%= f.input :description %>
        <%= f.input :banner_sport_picture %>
        <%= f.input :banner_sport_picture_cache, as: :hidden %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Save sport",
        class: "btn black-button" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

