<div class="form-container" id="session-margin-form">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">

      <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: "black-button fb-button" do %>
      <i class="fa fa-facebook"></i> Log in with <%= OmniAuth::Utils.camelize(provider) %>
      <% end %>
      <% end -%>
      <% end -%>

    <div class="alt-to-fb-session">
      <h4 class="text-center">or</h4 class="text-center">
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: "Enter email", label: false %>
            <%= f.input :password, required: false,  placeholder: "Enter password", label: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "black-button" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


