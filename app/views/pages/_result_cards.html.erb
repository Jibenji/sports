<div class="search-training-session">  <%= simple_form_for :search_query, html: { class: "form-inline" }, url: results_path, method: :get do |f| %>
  <%= f.input :sport, autofocus: true, collection: @sports_selection, prompt: "Sport", label: false, class: "black-button", style: "border-radius: 0% !important;" %>
  <%#= f.input :level, prompt: "Level", label: false, collection: ["Beginner", "Medium", "Difficult"] %>
  <%= f.input :date, as: :date_picker, class: "datepicker", label: false %>
  <%#= f.input :time, as: :time_picker, placeholder: "Time", label: false  %>
  <%= f.button :submit, "Search", class: "black-white-button", id: "filter-button" %>
  <% end %>

</div>

<% if @trainings %>
  <% @trainings.each do |training| %>
  <%= render partial: 'training_card', locals: { training: training } %>
  <% end %>

<% end %>

