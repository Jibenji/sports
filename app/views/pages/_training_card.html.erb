<div class=" result-card result-card-<%= training.id %>" >
  <%= link_to training_path(training) do %>
  <div class="photo-result-card" style="background-image: url('<%= cl_image_path training.profile.trainer.banner_picture %>')">
    <div class="card-corner-triangle">
    </div>
    <div class="spots-card"><p>Spots available</p>
      <h4><%= sessions.first.available_spots %>/<%= training.group_capacity %></h4>
    </div>
    <div class="card-main-description">
      <div>
        <p><%=training.sport.name %> by <%= training.profile.first_name %></p>
      </div>
      <div id="rating-price-training-card">
       <p><%= training.profile.average_reviews %></p>
       <p><%= training.price %> EUR</p>
     </div>
   </div>
 </div>
 <div class="description-result-card">
  <div>
  <p id="time-result-card"><%=  sessions.first.time.strftime("from %H:%M") %></p>
  <p><%= training.address %></p>
 </div>
</div>
<% end %>
</div>




