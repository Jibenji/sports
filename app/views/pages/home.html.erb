<%= render 'layouts/banner' %>


<section class="story-container">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <h3><span class="fa fa-heartbeat"></span><br>Your favorite sports<p>We offer different sports.<br>Pick a sport you like.</p></h3>
    </div>
    <div class="col-xs-12 col-md-4">
      <h3><span class="fa fa-check-square-o"></span><br>Quality trainings<p>Choose between different<br>trainings in your neighbourhood.</p></h3>
    </div>
    <div class="col-xs-12 col-md-4">
      <h3><span class="fa fa-credit-card"></span><br>Save and easy<p>Confirm your booking and<br>pay safely online.</p></h3>
    </div>
  </div>
</section>


<div class="tab-container">
  <div class="row">
    <div class="col-md-1"></div>
    <% @sports.each do |sport| %>
    <div class="tab tab-sport col-md-2 text-center" data-target=".<%=sport.name %>-tab">
      <div class = "relative" >
        <%= image_tag "sports/#{sport.name.downcase}.jpeg", class: "tab-pictures"  %>
      </div>
      <div class="tab-name">
        <%= sport.name %>
      </div>
    </div>
    <%end %>
  </div>
</div>

<div class="overview-container">
    <% @sports.each_with_index do |sport, i| %>
      <div class="<%= sport.name %>-tab tab-content <%= 'hidden' if i >= 1 %>">
      <% sport.trainings.cheap.each do |training|  %>
      <div class="card-training relative">
        <div class="card-training-description">
          <h3><%= training.title %></h3>
          <p><%= training.description %></p>
          <p><%= training.time %></p>
          <p><%= training.duration %></p>
        </div>
        <div>
          <%= link_to "Book", training_path(training), class: "buy-button" %>
        </div>

      </div>
      <% end %>
      </div>
    <% end %>
</div>







