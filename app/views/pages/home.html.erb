<div class="container">
  <div class="row">
    <div class="col-sm-1"></div>
    <% @sports.each do |sport| %>
    <div class="col-xs-12 col-sm-2">
      <a class="tab active" data-target=".<%= sport.name %>-tab" style="display: block;">
        <%= sport.name %>
      </a>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <% @sports.each_with_index do |sport, i| %>
          <div class="<%= sport.name %>-tab tab-content <%= 'hidden' if i >= 1 %>">
            <% sport.trainings.cheap.each do |training|  %>
            <p><%= training.title %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <div class="col-xs-12 col-sm-6">
            <% @sports.each_with_index do |sport, i|  %>
      <div class="<%= sport.name %>-tab tab-content <%= 'hidden' if i >= 1 %>" >
              <p><%= sport.name %></p>
      </div>
            <% end %>
    </div>
  </div>
</div>




