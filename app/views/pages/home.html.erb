<%= render 'layouts/banner' %>


<section class="story-container">

  <div class="row">

    <div class="col-xs-12 col-md-4">
      <h3><span class="fa fa-heartbeat"></span><br>Choose your favorite sport</h3>
    </div>
    <div class="col-xs-12 col-md-4">
      <h3><span class="fa fa-calendar-check-o"></span><br>Pick a training</h3>
    </div>
    <div class="col-xs-12 col-md-4">
      <h3><span class="fa fa-credit-card"></span><br>Pay easily online</h3>
    </div>
  </div>
</section>


<div class="container">
  <div class="row">
    <div class="col-sm-1"></div>
    <% @sports.each do |sport| %>
    <div class="col-xs-12 col-sm-2">
      <a class="tab" data-target=".<%= sport.name %>-tab" style="display: block;">
        <%= sport.name %>
      </a>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <% @sports.each_with_index do |sport, i| %>
          <div class="<%= sport.name %>-tab tab-content <%= 'hidden' if i >= 1 %>">
            <% sport.trainings.cheap.each do |training|  %>
            <p><%= training.title %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <div class="col-xs-12 col-sm-6">
            <% @sports.each_with_index do |sport, i|  %>
      <div class="<%= sport.name %>-tab tab-content <%= 'hidden' if i >= 1 %>" >
              <p><%= sport.name %></p>
      </div>
            <% end %>
    </div>
  </div>
</div>




